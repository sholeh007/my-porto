---
import { getCollection } from "astro:content"
import MainLayout from "../../layouts/Default.astro"

const posts = await getCollection("blog")
---

<MainLayout>
  <div>
    <h1 class='text-zinc-100 text-2xl md:text-3xl font-bold my-10'>Blog</h1>
    <ul class='space-y-4'>
      {
        posts.map((post) => (
          <li class='border border-zinc-700 rounded-md p-4'>
            <h3 class='text-xl font-semibold text-zinc-100'>{post.data.title}</h3>
            <p class='text-zinc-400 text-sm'>
              {post.data.publishDate.toISOString().slice(0, 10)}
            </p>
            <p class='text-zinc-200 text-lg pt-2'>{post.data.description}</p>
            <a
              href={`/blog/${post.slug}`}
              class='text-zinc-100 italic font-bold hover:underline'
            >
              Read more
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</MainLayout>
