---
import { Picture } from "astro:assets"
import local404Img from "../assets/404.png"
import Link from "../components/UI/Link.astro"
import MainLayout from "../layouts/Default.astro"
---

<MainLayout>
  <div class='flex flex-col justify-center items-center text-zinc-200'>
    <Picture src={local404Img} alt='not found' width='500' height='500' />
    <h2 class='text-2xl mt-4 mb-2 font-bold'>This page doesn't exist</h2>
    <p>Please check your URL or return to the <Link href='/'>home page</Link></p>
  </div>
</MainLayout>
